<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <tr scope="col">No.</tr>
      <tr scope="col">タイトル</tr>
      <tr scope="col"></tr>
    </tr>
  </thead>
</table>
<tbody>
  <%= @posts.each.with_index(1) do |post, i| %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= post.title %></td>
      <td>
        <%= link_to "詳細", post %>
        <%= link_to "編集", edit_post_path(post) %>
        <%= link_to "削除", post, method: :delete, data: { confirm: "削除しますか?" } %>
      </td>
    </tr>
</tbody>
